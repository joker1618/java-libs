<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %-7level %logger{20}\(%line\) - %msg%n
                <!--%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{20}\(%line\) - %msg%n-->
            </pattern>
        </encoder>
    </appender>

    <logger name="xxx.joker.libs.repository.engine.RepoHandler2" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="all">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>