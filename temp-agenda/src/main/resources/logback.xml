<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} %-5level %logger{20}\(%line\) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!--<logger name="xxx.joker.apps.bankmanager" level="trace" additivity="false">-->
        <!--<appender-ref ref="STDOUT"/>-->
    <!--</logger>-->

    <root level="warn">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>